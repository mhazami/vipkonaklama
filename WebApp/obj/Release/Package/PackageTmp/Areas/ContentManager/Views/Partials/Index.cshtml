@using Radyn.Web.Mvc;

@model IEnumerable<Radyn.ContentManager.DataStructure.Partials>
    @{
        ViewBag.Title = @Resources.Common.List + " " + @Resources.ContentManager.Partials;
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    @section Head{}
    @section PageTitle
{
        @Resources.Common.List @Resources.ContentManager.Partials
    }
    @section PageAction
{
        <div class="button-div m-btn waves-blue i-add">
            @{Html.Radyn().ImageActionLink().ActionName("Create").ControllerName("Partials").Area("ContentManager").Text(@Resources.ContentManager.Partials + " " + @Resources.Common.New).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Add.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
        </div>

    }
    @section PageActionDown
{
        <div class="button-div m-btn waves-blue i-add">
            @{Html.Radyn().ImageActionLink().ActionName("Create").ControllerName("Partials").Area("ContentManager").Text(@Resources.ContentManager.Partials + " " + @Resources.Common.New).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Add.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
        </div>
    }
    <div class="radynForm">

        <div class="item-row">
            <div class="table-row-cap">
                <div class="item">
                </div>
            </div>


            <div class="table-row-item select-row two-col">
                <div class="item">
                    <input type="text" name="title" id="title" class="" />

                    <div class="m-btn waves-blue i-search icon-btn ">
                        <span>
                            <input type="submit" name="name" value=""/>
                        </span>
                    </div>


                </div>
            </div>

        </div>


    </div>


    <div class="radynForm">
        <div class="fit">
            @{Html.Radyn().Grid(Model).Name("Grid").HtmlAttributes(new { style = "width:98%;margin: 0 auto" }).Columns(columns =>
                      {
                          columns.Template(partials => partials.Title).Title(@Resources.ContentManager.Title).Width(100).HeaderHtmlAttributes(new { style = "text-align:center" });
                          columns.Template(partials => partials.Url).Title(@Resources.ContentManager.Url).Width(200).HeaderHtmlAttributes(new { style = "text-align:center" });
                          columns.Template(partials => partials.Operation.Title).Title(Resources.ContentManager.Operation).Width(200).HeaderHtmlAttributes(new { style = "text-align:center" });
                          columns.Template(partials => partials.Enabled ? Resources.Common.Enable : Resources.Common.Disable).Title(@Resources.Common.Enable).Width(100).HeaderHtmlAttributes(new { style = "text-align:center" });
                          columns.Template(content =>
                          "<a style='cursor: pointer;'  href='" + Url.Content("~/ContentManager/Partials/Details?Id=" + content.Id) + "'>" +
                          " <img width='18' align='absmiddle' title='" + Resources.Common.Detail + "' src='" + Url.Content("~/Content/Images/details.png") + "' />" + "</a> | " +
                          "<a style='cursor: pointer;'  href='" + Url.Content("~/ContentManager/Partials/Edit?Id=" + content.Id) + "'> " +
                          " <img width='18' align='absmiddle' title='" + Resources.Common.Edit + "' src='" + Url.Content("~/Content/Images/edit.png") + "' />" + "</a> | " +
                          "<a style='cursor: pointer;'  href='" + Url.Content("~/ContentManager/Partials/Delete?Id=" + content.Id) + "'>" +
                          " <img width='18' align='absmiddle' title='" + Resources.Common.Delete + "' src='" + Url.Content("~/Content/Images/Delete-Close.png") + "' />" + "</a> ").Width(300).Filterable(false).Encode(false);

                      })

.Sortable(sorting => sorting.Enabled(true))
.Pageable(paging => paging.Enabled(true))
.Filterable(filtering => filtering.Enabled(true))
//.Footer(true)
.Render();}
        </div>

    </div>
