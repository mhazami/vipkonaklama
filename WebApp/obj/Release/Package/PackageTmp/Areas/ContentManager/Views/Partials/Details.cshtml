@using Radyn.Web.Mvc;
@model Radyn.ContentManager.DataStructure.Partials
@{
    ViewBag.Title = @Resources.Common.Detail + " " + @Resources.ContentManager.Partials;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Head{}
@section PageTitle
{
    @Resources.Common.Detail @Resources.ContentManager.Partials
}
@section PageAction
{
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().ActionName("Index").ControllerName("Partials").Area("ContentManager").Text(@Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>

}
@section PageActionDown
{
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().ActionName("Index").ControllerName("Partials").Area("ContentManager").Text(@Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>

}

<div class="radynForm">

    @using (Html.BeginForm())
    {

        @Html.ValidationSummary(true)
        Html.RenderAction("GetDetail", "Partials", new { area = "ContentManager", Id = ViewBag.Id });

    }
</div>