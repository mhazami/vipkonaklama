@using Radyn.Web.Mvc;
@using Radyn.WebApp.Areas.Common.Component
@model Radyn.ContentManager.DataStructure.Container
@{
    ViewBag.Title = @Resources.Common.Create + " " + @Resources.ContentManager.Container;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Head{

}
@section PageTitle
{
    @Resources.ContentManager.Container @Resources.Common.New
}
@section PageAction
{
    <div class="button-div m-btn waves-green i-save">
        @{Html.Radyn().ImageActionLink().ActionName("Create").ControllerName("Container").Area("ContentManager").Text(@Resources.Common.Create).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Save.png")).ImagePosition(ImageActionLink.Position.Right).Submit().ImageWidth("15").ImageHeight("20").Render(); }
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().ActionName("Index").ControllerName("Container").Area("ContentManager").Text(@Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>
}
@section PageActionDown
{

}
@using (Html.BeginForm())
{

    @Html.ValidationSummary(true)
    Html.RenderAction("GetModify", "Container", new { area = "ContentManager" });
}






