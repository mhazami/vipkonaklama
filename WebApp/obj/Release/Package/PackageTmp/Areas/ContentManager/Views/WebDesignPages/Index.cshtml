@using Radyn.Utility
@using Radyn.Web.Mvc;
@model IEnumerable<Radyn.ContentManager.DataStructure.Pages>
@{
    ViewBag.Title =Resources.ContentManager.Pages;
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@section Head{
}
@section PageTitle
{
   @Resources.ContentManager.Pages
}
@section PageAction
{
    <div class="button-div m-btn waves-blue"> <i class="fas fa-plus"></i>
        @{ Html.Radyn().ImageActionLink().ActionName("Create").ControllerName("WebDesignPages").Area("ContentManager").Text(@Resources.Common.Create + " " + @Resources.ContentManager.Pages).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/Add.png")).ImagePosition(ImageActionLink.Position.Right).Render(); }
    </div>
    }
@section PageActionDown
{
    <div class="button-div m-btn waves-blue"> <i class="fas fa-plus"></i>
    @{Html.Radyn().ImageActionLink().ActionName("Create").ControllerName("WebDesignPages").Area("ContentManager").Text(@Resources.Common.Create + " " + @Resources.ContentManager.Pages).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/Add.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>
}
    <div class="radynForm">
        @{
            Html.Radyn().Grid(Model).Name("Grid").HtmlAttributes(new { style = "width:98%;margin: 0 auto" }).Columns(columns =>
            {
                columns.Template(container => container.Title).Title(Resources.ContentManager.Title).Width(200).HeaderHtmlAttributes(new { style = "text-align:center" });
                columns.Template(content => content.Enabled ? Resources.Common.Enable : Resources.Common.Disable).Title(@Resources.Common.Enable).Width(50).HeaderHtmlAttributes(new { style = "text-align:center" });
                columns.Template(content => content.Url).Title(@Resources.ContentManager.Url).Width(70).HeaderHtmlAttributes(new { style = "text-align:center" });
                columns.Template(resource =>
                        "<a style='cursor: pointer;'  href='" + Url.Content("~/ContentManager/WebDesignPages/Details?Id=" + resource.Id) + "'>" +
                        " <img width='18' align='absmiddle' title='" + Resources.Common.Detail + "' src='" + Url.Content("~/Content/Images/details.png") + "' />" + "</a> | " +
                        "<a style='cursor: pointer;'  href='" + Url.Content("~/ContentManager/WebDesignPages/Edit?Id=" + resource.Id) + "'> " +
                        " <img width='18' align='absmiddle' title='" + Resources.Common.Edit + "' src='" + Url.Content("~/Content/Images/edit.png") + "' />" + "</a> | " +
                        "<a style='cursor: pointer;'  href='" + Url.Content("~/ContentManager/WebDesignPages/Delete?Id=" + resource.Id) + "'> " +
                        " <img width='18' align='absmiddle' title='" + Resources.Common.Delete + "' src='" + Url.Content("~/Content/Images/Delete-Close.png") + "' />" + "</a> | "+
                 "<a style='cursor: pointer;'  href='" + Url.Content("~/ContentManager/UIDesginPanel/Index?Id=" + resource.HtmlId) + "'>" +
                    " <img width='18' align='absmiddle' title='" + Resources.WebDesign.Design + "' src='" + Url.Content("~/Content/Images/Design.png") + "' /></a>").Width(300).Filterable(false).Encode(false);
            })
                .Sortable(sorting => sorting.Enabled(true))
                .Pageable(paging => paging.Enabled(true))
                .Filterable(filtering => filtering.Enabled(true))
                .Footer(false).Render();}
    </div>
