@using Radyn.ContentManager.DataStructure
@using Radyn.Web.Mvc;
@model Menu
@{
    ViewBag.Title = Resources.Common.Delete;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Head{}
@section PageTitle
{
    @Resources.Common.Delete
}
@section PageAction
{

    <div class="button-div m-btn waves-red i-delete">
        @{Html.Radyn().ImageActionLink().Text(@Resources.Common.Delete).Align(ImageActionLink.Alignment.Right).ImageUrl(Url.Content("~/Content/Images/Delete-Close.png")).ImagePosition(ImageActionLink.Position.Right).Submit().ImageHeight("20").Render(); }
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/WebDesign/WebDesignMenu/Index")).Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Right).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}

    </div>
}
@section PageActionDown
{

    <div class="button-div m-btn waves-red i-delete">
        @{Html.Radyn().ImageActionLink().Text(@Resources.Common.Delete).Align(ImageActionLink.Alignment.Right).ImageUrl(Url.Content("~/Content/Images/Delete-Close.png")).ImagePosition(ImageActionLink.Position.Right).Submit().ImageHeight("20").Render(); }
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/ContentManager/WebDesignMenu/Index")).Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Right).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}

    </div>
}

@using (Html.BeginForm())
{

    Html.RenderAction("GetDetails", "Menu", new { area = "ContentManager", Id = ViewBag.Id });
}
