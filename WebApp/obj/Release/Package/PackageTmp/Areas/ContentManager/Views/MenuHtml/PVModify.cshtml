@model Radyn.ContentManager.DataStructure.MenuHtml
@Html.ValidationSummary(true)
<div>
    <div class="alert-box">
        <div class="table-row-point">
            <div class="item">
                لطفا در قسمتی که برای قرار گرفتن در قابل اصلی منو  میباشد از عبارت {childbody} استفاده نمایید.
            </div>
        </div>
        <div class="table-row-point">
            <div class="item">
                لطفا در قسمتی که برای قرار گرفتن در عنوان منو  میباشد از عبارت {menutitle} استفاده نمایید.
            </div>
        </div>
        <div class="table-row-point">
            <div class="item">
                لطفا در قسمتی که برای قرار گرفتن لینک منو میباشد از عبارت {menulink} استفاده نمایید.
            </div>
        </div>
    </div>
    <div class="item-row fit">
        <div class="table-row-cap">
            <div class="item">
                @Resources.Common.Title
            </div>
        </div>
        <div class="table-row-item">
            <div class="item">
                <div class="width35percent page-align">
                    @Html.TextBoxFor(model => model.Title)

                </div>
            </div>
        </div>
    </div>
    <div class="item-row fit">
        <div class="table-row-cap">
            <div class="item">
                MasterBody Html
            </div>
        </div>
        <div class="table-row-item">
            <div class="item">
                @Html.TextAreaFor(x => x.MasterBody, new { style = "height:100px;" })


            </div>
        </div>
    </div>
    <div class="item-row fit">
        <div class="table-row-cap ">
            <div class="item">
                RootMenuBody Html
            </div>
        </div>
        <div class="table-row-item table-fit table-c-auto">
            <div class="item">
                @Html.TextAreaFor(x => x.RootMenuBody, new { style = "height:100px;" })


            </div>
        </div>
    </div>

    <div class="item-row fit">
        <div class="table-row-cap">
            <div class="item">
                HasChildBody Html
            </div>
        </div>
        <div class="table-row-item">
            <div class="item">
                @Html.TextAreaFor(x => x.HasChildBody, new { style = "height:100px;" })


            </div>
        </div>
    </div>
    <div class="item-row fit">
        <div class="table-row-cap">
            <div class="item">
                ChildMenuBody Html
            </div>
        </div>
        <div class="table-row-item">
            <div class="item">
                @Html.TextAreaFor(x => x.ChildMenuBody, new { style = "height:100px;" })


            </div>
        </div>
    </div>

</div>



















