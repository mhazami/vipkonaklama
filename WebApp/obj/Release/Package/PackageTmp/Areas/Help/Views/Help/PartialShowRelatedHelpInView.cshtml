@using Radyn.Help.DataStructure
@using Radyn.Web.Mvc.Utility
@model HelpContent
<table border="0" cellpadding="2" cellspacing="2" width="100%"  style='padding: 4px 4px 4px 4px;direction:@Resources.Common.Direction ;text-align:@Resources.Common.Aligment;'>
    @if (Model == null)
    {
        <tr>
            <td class="EditFiled" style="height: 30px;">
                @(((HelpContent)ViewBag.DefultHelp).Title)
            </td>
        </tr>
        <tr>
            <td class="EditFiled" style="height: 100px;">
                @{Html.HtmlEncoder(((HelpContent)ViewBag.DefultHelp).Content);
                }
            </td>
        </tr>
    }
    else
    {
        <tr>
            <td class="EditFiled" style="height: 30px;">
                @Html.DisplayTextFor(model => model.Title)
            </td>
        </tr>
        <tr>
            <td class="EditFiled" style="height: 100px;">
                @{Html.HtmlEncoder(Model.Content);
                }
            </td>
        </tr> 
    }



</table>

