@using Radyn.Web.Mvc

@model IEnumerable<Radyn.Message.DataStructure.MailInfo>
                    
<div >
    @{Html.Radyn().Grid(Model).Name("Grid").HtmlAttributes(new { style = "width:98%;margin: 0 auto" }).Columns(columns =>
        {
            columns.Template(mailInfo => "<a style='cursor: pointer;'  onclick=\"GetMail('" + mailInfo.Id + "');\"  > " + mailInfo.Subject + "</a> ").Title(Resources.Message.Subject).HeaderHtmlAttributes(new { style = "text-align:center" }).Width(200);
            columns.Template(mailInfo => mailInfo.ToNames).Title(@Resources.Message.To).Width(100).HeaderHtmlAttributes(new { style = "text-align:center" });
            columns.Template(mailInfo => mailInfo.EmailDateTime).Title(@Resources.Message.Date).Width(100).HeaderHtmlAttributes(new { style = "text-align:center" });
            columns.Template(mailInfo => "<input type='checkbox' class='checkboxGroups' onclick=\"AddToDeleteDraftMessage();\"  alt='" + Resources.Common.Select + "' style='cursor: pointer' value='" + mailInfo.Id + "'  id='CheckSelect-" + mailInfo.Id + "' name='CheckSelect-" + mailInfo.Id + "' />").Title("<input type='checkbox' class='checkboxGroups'  onclick='SelectAllForDeleteDraft();' style='cursor: pointer'   id='CheckSelectAll' name='CheckSelectAll' />").Width(60).HeaderHtmlAttributes(new { style = "text-align:center;height:30px" });


        })

            .Sortable(sorting => sorting.Enabled(true))
            .Pageable(paging => paging.Enabled(false))
            .Filterable(filtering => filtering.Enabled(true))
            //.Footer(true)
            .Render();}
</div>
                    
                    
