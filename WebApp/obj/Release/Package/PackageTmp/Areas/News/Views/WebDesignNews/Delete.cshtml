@using Radyn.Web.Mvc;
@using Radyn.Utility
@{
    ViewBag.Title = @Resources.Common.Delete;
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@section Head{
}
@section PageTitle
{
    @Resources.Common.Delete
}
@section PageAction
{
    <div class="button-div m-btn waves-green i-save">
        @{ Html.Radyn().ImageActionLink().ActionName("Delete").ControllerName("WebDesignNews").Area("News").Text(Resources.Common.Delete).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/Save.png")).ImagePosition(ImageActionLink.Position.Right).Submit().Render(); }
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().ActionName("Index").ControllerName("WebDesignNews").Area("News").Text(Resources.Common.Return).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>
}
@section PageActionDown
{
    <div class="button-div m-btn waves-green i-save">
        @{ Html.Radyn().ImageActionLink().ActionName("Delete").ControllerName("WebDesignNews").Area("News").Text(Resources.Common.Delete).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/Save.png")).ImagePosition(ImageActionLink.Position.Right).Submit().Render(); }
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().ActionName("Index").ControllerName("WebDesignNews").Area("News").Text(Resources.Common.Return).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>
}
@using (Html.BeginForm())
{
    Html.RenderAction("GetDetails", "News", new { Id = ViewBag.Id, area = "News" });
}
