@using Radyn.Web.Mvc;
@using Radyn.WebApp
@model Radyn.PhoneBook.DataStructure.Person
@{
    ViewBag.Title = Resources.Common.Edit;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Head{
    <script type="text/javascript">
        getPartial("/PhoneBook/Person/GetModify",{ status: "@PageMode.Edit", Id:'@ViewBag.Id' },"DivPersonItem");
        function EditPerson() {
            $.post("/PhoneBook/Person/Edit", $('form[action^="/PhoneBook/Person/Edit"]').serialize(), function (data) {
                if (data != "") {
                    ShowRadynMessage();
                }
            });
            ShowRadynMessage();
        }

    </script>
}
@section PageTitle
{
    @Resources.Common.Edit  @Resources.PhoneBook.Person
}
@section PageAction
{
    <div class="button-div m-btn waves-green i-save">

        @{Html.Radyn().ImageActionLink().ActionName("Edit").ControllerName("Person").Area("PhoneBook").ImageUrl(Url.Content("~/Content/Images/Save.png")).Text(Resources.Common.Save).ImageHeight("20").ImageWidth("15").Callback().CallbackType(ImageActionLink.CallbackType.post).CallbackReturnFunction(" function (data){if(data!='false') {EditPerson();} else {ShowRadynMessage();} } ").NavigateUrl("/PhoneBook/Person/Validate").Serialize("/PhoneBook/Person/Edit", false).Render();}
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().ActionName("Index").ControllerName("Person").Area("PhoneBook").Text(@Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>
}
@section PageActionDown
{
    <div class="button-div m-btn waves-green i-save">

        @{Html.Radyn().ImageActionLink().ActionName("Edit").ControllerName("Person").Area("PhoneBook").ImageUrl(Url.Content("~/Content/Images/Save.png")).Text(Resources.Common.Save).ImageHeight("20").ImageWidth("15").Callback().CallbackType(ImageActionLink.CallbackType.post).CallbackReturnFunction(" function (data){if(data!='false') {EditPerson();} else {ShowRadynMessage();} } ").NavigateUrl("/PhoneBook/Person/Validate").Serialize("/PhoneBook/Person/Edit", false).Render();}
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().ActionName("Index").ControllerName("Person").Area("PhoneBook").Text(@Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>
}


@using (Html.BeginForm("Edit", "Person", new { Area = "PhoneBook" }))
{
    <div class="radynForm">
        <div id="DivPersonItem"></div>

    </div>
}
