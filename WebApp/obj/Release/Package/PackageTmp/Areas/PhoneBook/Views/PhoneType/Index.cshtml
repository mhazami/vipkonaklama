@using Radyn.Web.Mvc;
@model IEnumerable<Radyn.PhoneBook.DataStructure.PhoneType>
    @{
        ViewBag.Title = @Resources.Common.List + " " + @Resources.PhoneBook.PhoneType;
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    @section Head{}
    @section PageTitle
{
        @Resources.Common.List @Resources.PhoneBook.PhoneType}
    @section PageAction
{
        <div class="button-div m-btn waves-blue i-add">
            @{Html.Radyn().ImageActionLink().ActionName("Create").ControllerName("PhoneType").Area("PhoneBook").Text(@Resources.PhoneBook.AddressType + " " + @Resources.Common.New).Align(ImageActionLink.Alignment.Right).ImageUrl(Url.Content("~/Content/Images/Add.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
        </div>
    }
    @section PageActionDown
{
        <div class="button-div m-btn waves-blue i-add">
            @{Html.Radyn().ImageActionLink().ActionName("Create").ControllerName("PhoneType").Area("PhoneBook").Text(@Resources.PhoneBook.AddressType + " " + @Resources.Common.New).Align(ImageActionLink.Alignment.Right).ImageUrl(Url.Content("~/Content/Images/Add.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
        </div>
    }
        <div class="radynForm">
    @{Html.Radyn().Grid(Model).Name("Grid").HtmlAttributes(new { style = "width:98%;margin: 0 auto" }).Columns(columns =>
        {
            columns.Template(addressType => addressType.Title).Title(Resources.PhoneBook.Title).Width(350).HeaderHtmlAttributes(new { style = "text-align:center" });
            columns.Template(role => role.ShowSearchResult ? Resources.Common.Yes : Resources.Common.No).Title(" قابل نمایش در جستجو").Width(60).HeaderHtmlAttributes(new { style = "text-align:center" });

            columns.Template(resource =>
                "<a style='cursor: pointer;'  href='" + Url.Content("~/PhoneBook/PhoneType/Details?Id=" + resource.Id) + "'>" +
                " <img width='18' align='absmiddle' title='" + Resources.Common.Detail + "' src='" + Url.Content("~/Content/Images/details.png") + "' />" + "</a> | " +
                "<a style='cursor: pointer;'  href='" + Url.Content("~/PhoneBook/PhoneType/Edit?Id=" + resource.Id) + "'> " +
                " <img width='18' align='absmiddle' title='" + Resources.Common.Edit + "' src='" + Url.Content("~/Content/Images/edit.png") + "' />" + "</a>  |" +
                "<a style='cursor: pointer;'  href='" + Url.Content("~/PhoneBook/PhoneType/Delete?Id=" + resource.Id) + "'>" +
                " <img width='18' align='absmiddle' title='" + Resources.Common.Detail + "' src='" + Url.Content("~/Content/Images/Delete-Close.png") + "' />" + "</a>  ").Width(300).Filterable(false).Encode(false);

        })

            .Sortable(sorting => sorting.Enabled(true))
            .Pageable(paging => paging.Enabled(true))
            .Filterable(filtering => filtering.Enabled(true))
            //.Footer(true)
            .Render();}



        </div>