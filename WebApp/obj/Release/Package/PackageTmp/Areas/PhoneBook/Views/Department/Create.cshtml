@using Radyn.Web.Mvc;
@using Radyn.WebApp.AppCode.Security
@using Radyn.WebApp.Areas.Common.Component
@model Radyn.PhoneBook.DataStructure.Department
@{
    ViewBag.Title = @Resources.Common.Create + " " + @SessionParameters.PhoneBookConfiguration.DepartmentName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Head{}
@section PageTitle
{
    @SessionParameters.PhoneBookConfiguration.DepartmentName @Resources.Common.New
}
@section PageAction
{
    <div class="button-div m-btn waves-green i-save">
        @{Html.Radyn().ImageActionLink().ActionName("Create").ControllerName("Department").Area("PhoneBook").Text(Resources.Common.Save).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Save.png")).ImagePosition(ImageActionLink.Position.Right).Submit().Render();}
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{ Html.Radyn().ImageActionLink().ActionName("Index").ControllerName("Department").Area("PhoneBook").Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render(); }
    </div>
}
@section PageActionDown
{
    <div class="button-div m-btn waves-green i-save">
        @{Html.Radyn().ImageActionLink().ActionName("Create").ControllerName("Department").Area("PhoneBook").Text(Resources.Common.Save).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Save.png")).ImagePosition(ImageActionLink.Position.Right).Submit().Render();}
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{ Html.Radyn().ImageActionLink().ActionName("Index").ControllerName("Department").Area("PhoneBook").Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render(); }
    </div>
}


@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="radynForm">
        <div class="fit">
            <div class="item-row">
                <div class="table-row-cap">
                    <div class="item">
                        @Resources.PhoneBook.Title
                    </div>
                </div>
                <div class="table-row-item">
                    <div class="item">
                        @{
                            Html.LanguageContentTextBoxFor(Model,model => model.Title);
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="item-row">
            <div class="table-row-cap">
                <div class="item">
                    @Resources.PhoneBook.Office
                </div>
            </div>
            <div class="table-row-item">
                <div class="item">
                    @Html.DropDownListFor(model => model.OfficeId, (SelectList)ViewBag.OfficeList, "", new { })
                </div>
            </div>
        </div>
    </div>
}
