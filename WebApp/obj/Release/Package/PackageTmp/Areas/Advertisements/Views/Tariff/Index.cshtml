@using Radyn.Utility
@using Radyn.Web.Mvc;
@model IEnumerable<Radyn.Advertisements.DataStructure.Tariff>

    @{
        ViewBag.Title = @Resources.Common.Index;
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    @section Head{}
    @section PageTitle
{
        @Resources.Advertisement.ComponentTitle
    }
    @section PageAction
{
        <div class="button-div m-btn waves-blue i-add">
            @{Html.Radyn().ImageActionLink().ActionName("Create").ControllerName("Tariff").Area("Advertisements").Text(Resources.Common.Create).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/Add.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
        </div>

    }
    @section PageActionDown
{
        <div class="button-div m-btn waves-blue i-add">
            @{Html.Radyn().ImageActionLink().ActionName("Create").ControllerName("Tariff").Area("Advertisements").Text(Resources.Common.Create).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/Add.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
        </div>

    }
    <div class="radynForm">
        @{Html.Radyn().Grid(Model).Name("Grid").HtmlAttributes(new { style = "width:98%;margin: 0 auto" }).Columns(columns =>
            {
                columns.Template(advertisement => advertisement.TariffClass.Title).Title(Resources.Advertisement.Position).Width(350).HeaderHtmlAttributes(new { style = "text-align:center" });
                columns.Template(advertisement => advertisement.Title).Title(Resources.Advertisement.Title).Width(350).HeaderHtmlAttributes(new { style = "text-align:center" });
                columns.Template(advertisement => advertisement.DayCount).Title(Resources.Advertisement.DayCount).Width(350).HeaderHtmlAttributes(new { style = "text-align:center" });
                columns.Template(advertisement => advertisement.ClickCount).Title(Resources.Advertisement.ClickCount).Width(350).HeaderHtmlAttributes(new { style = "text-align:center" });
                columns.Template(advertisement => advertisement.VisitCount).Title(Resources.Advertisement.VisitCount).Width(350).HeaderHtmlAttributes(new { style = "text-align:center" });
                columns.Template(advertisement => advertisement.Description).Title(Resources.Advertisement.Description).Width(350).HeaderHtmlAttributes(new { style = "text-align:center" });
                columns.Template(advertisement => advertisement.Price).Title(Resources.Advertisement.Price).Width(350).HeaderHtmlAttributes(new { style = "text-align:center" });

                columns.Template(resource =>
                    "<a style='cursor: pointer;'  href='" + Url.Content("~/Advertisements/Tariff/Details?Id=" + resource.Id) + "'>" +
                    " <img width='18' align='absmiddle' title='" + Resources.Common.Detail + "' src='" + Url.Content("~/Content/Images/details.png") + "' />" + "</a> | " +
                    "<a style='cursor: pointer;'  href='" + Url.Content("~/Advertisements/Tariff/Edit?Id=" + resource.Id) + "'> " +
                    " <img width='18' align='absmiddle' title='" + Resources.Common.Edit + "' src='" + Url.Content("~/Content/Images/edit.png") + "' />" + "</a> | " +
                    "<a style='cursor: pointer;'  href='" + Url.Content("~/Advertisements/Tariff/Delete?Id=" + resource.Id) + "'>" +
                    " <img width='18' align='absmiddle' title='" + Resources.Common.Detail + "' src='" + Url.Content("~/Content/Images/Delete-Close.png") + "' />" + "</a>  ").Width(300).Filterable(false).Encode(false);

            })

                .Sortable(sorting => sorting.Enabled(true))
                .Pageable(paging => paging.Enabled(true))
                .Filterable(filtering => filtering.Enabled(true))
                //.Footer(true)
                .Render();}

    </div>
