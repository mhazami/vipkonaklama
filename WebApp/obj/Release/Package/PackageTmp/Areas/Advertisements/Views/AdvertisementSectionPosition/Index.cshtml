@using Radyn.Utility
@using Radyn.Web.Mvc
@model IEnumerable<Radyn.Advertisements.DataStructure.SectionPosition>
    @{
        ViewBag.Title = @Resources.Advertisement.ComponentTitle;
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    @section Head{}
    @section PageTitle
{
        @Resources.Advertisement.SectionPosition
    }
    @section PageAction
{
        <div class="button-div m-btn waves-blue i-add">
            @{Html.Radyn().ImageActionLink().ActionName("Create").ControllerName("Advertisement").Area("Advertisements").Text(Resources.Common.Create).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/Add.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
        </div>

    }
    @section PageActionDown
{
        <div class="button-div m-btn waves-blue i-add">
            @{Html.Radyn().ImageActionLink().NavigateUrl("/Advertisements/AdvertisementSectionPosition/Create?sectionId=" + Request.QueryString["sectionId"]).Text(Resources.Common.Create).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/Add.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
        </div>
        <div class="button-div m-btn waves-blue i-add">
            @{Html.Radyn().ImageActionLink().ActionName("Index").ControllerName("Advertisement").Area("Advertisements").Text(Resources.Advertisement.Advertisements).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
        </div>
        <div class="button-div m-btn waves-blue i-add">
            @{Html.Radyn().ImageActionLink().ActionName("Index").ControllerName("AdvertisementSection").Area("Advertisements").Text(Resources.Advertisement.Section).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
        </div>

    }

@{Html.Radyn().Grid(Model).Name("Grid").HtmlAttributes(new { style = "width:98%;margin: 0 auto" }).Columns(columns =>
  {
      columns.Template(advertisement => advertisement.Title).Title(Resources.Advertisement.Position).Width(350).HeaderHtmlAttributes(new { style = "text-align:center" });
      columns.Template(advertisement => advertisement.KeyWord).Title(Resources.Advertisement.KeyWord).Width(350).HeaderHtmlAttributes(new { style = "text-align:center" });

      columns.Template(resource =>
          "<a style='cursor: pointer;'  href='" + Url.Content("~/Advertisements/AdvertisementType/Details?Id=" + resource.Id) + "'>" +
          " <img width='18' align='absmiddle' title='" + Resources.Common.Detail + "' src='" + Url.Content("~/Content/Images/details.png") + "' />" + "</a> | " +
          "<a style='cursor: pointer;'  href='" + Url.Content("~/Advertisements/AdvertisementType/Edit?Id=" + resource.Id) + "'> " +
          " <img width='18' align='absmiddle' title='" + Resources.Common.Edit + "' src='" + Url.Content("~/Content/Images/edit.png") + "' />" + "</a> | " +
          "<a style='cursor: pointer;'  href='" + Url.Content("~/Advertisements/AdvertisementType/Delete?Id=" + resource.Id) + "'>" +
          " <img width='18' align='absmiddle' title='" + Resources.Common.Detail + "' src='" + Url.Content("~/Content/Images/Delete-Close.png") + "' />" + "</a>  |"+
          "<a style='cursor: pointer;'  href='" + Url.Content("~/Advertisements/TariffClass/Index?SectionPositionId=" + resource.Id) + "'>" +
          " <img width='18' align='absmiddle' title='" + Resources.Advertisement.Tariff + "' src='" + Url.Content("~/Content/Images/payment-details.png") + "' />" + "</a>  ").Width(300).Filterable(false).Encode(false);

  })

      .Sortable(sorting => sorting.Enabled(true))
      .Pageable(paging => paging.Enabled(true))
      .Filterable(filtering => filtering.Enabled(true))
      //.Footer(true)
      .Render();}



