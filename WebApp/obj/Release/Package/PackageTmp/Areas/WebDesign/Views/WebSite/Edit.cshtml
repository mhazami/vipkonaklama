@using Radyn.Web.Mvc;
@using Radyn.WebApp

@model Radyn.WebDesign.DataStructure.WebSite

@{
    ViewBag.Title = Resources.Common.Edit;
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@section Head{
    <script>
        getPartial("/WebDesign/WebSite/GetModify", { status: "@PageMode.Edit", Id: '@ViewBag.Id' },"DivWebSite");
    </script>
}
@section PageTitle
{
    @Resources.Common.Edit

}
@section PageAction
{
    <div class="button-div m-btn waves-green i-save">
        @{ Html.Radyn().ImageActionLink().ActionName("Edit").ControllerName("WebSite").Area("WebDesign").Text(Resources.Common.Save).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/edit.png")).ImagePosition(ImageActionLink.Position.Right).Submit().Render(); }
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().ActionName("Index").ControllerName("WebSite").Area("WebDesign").Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>
}
@section PageActionDown
{
    <div class="button-div m-btn waves-green i-save">
        @{ Html.Radyn().ImageActionLink().ActionName("Edit").ControllerName("WebSite").Area("WebDesign").Text(Resources.Common.Save).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/edit.png")).ImagePosition(ImageActionLink.Position.Right).Submit().Render(); }
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().ActionName("Index").ControllerName("WebSite").Area("WebDesign").Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>

}
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div id="DivWebSite">
       
    </div>

}
