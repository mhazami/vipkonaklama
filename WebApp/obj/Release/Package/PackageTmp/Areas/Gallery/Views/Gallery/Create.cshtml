@using Radyn.Gallery.DataStructure
@using Radyn.Utility
@using Radyn.Web.Mvc

@model Gallery
@{
    ViewBag.Title = Resources.Gallery1.Galleryname + " " + Resources.Common.Create;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Head{
    <script type="text/javascript">
         $(document).ready(function () {
             $("#DivItem").html("");
             $.get("@Url.Content("~/Gallery/Gallery/GetModify")", {  date: new Date().getTime() }, function (data) {
                   $("#DivItem").html(data).slideDown("slow");;
               });
           });
    </script>
}
@section PageTitle
{
    @Resources.Gallery1.Galleryname @Resources.Common.New
}
@section PageAction
{
    <div class="button-div m-btn waves-green i-save">
        @{Html.Radyn().ImageActionLink().ActionName("Create").ControllerName("Gallery").Area("Gallery").Text(@Resources.Common.Save).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/Save.png")).ImagePosition(ImageActionLink.Position.Right).Submit().Render();}
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().ActionName("Index").ControllerName("Gallery").Area("Gallery").Text(@Resources.Common.Return).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>
}
@section PageActionDown
{
    <div class="button-div m-btn waves-green i-save">
        @{Html.Radyn().ImageActionLink().ActionName("Create").ControllerName("Gallery").Area("Gallery").Text(@Resources.Common.Save).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/Save.png")).ImagePosition(ImageActionLink.Position.Right).Submit().Render();}
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().ActionName("Index").ControllerName("Gallery").Area("Gallery").Text(@Resources.Common.Return).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>
}
<div>
    @ViewBag.Message
</div>
@using (Html.BeginForm())
{
    <div id="DivItem"></div>
}

