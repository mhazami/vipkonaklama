@using Radyn.Utility
@using Radyn.Web.Mvc;
@model Radyn.Security.DataStructure.Menu
@{
    ViewBag.Title = @Resources.Common.Create + " " + @Resources.Security.MenuName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Head{
    <script type="text/javascript">
        $(document).ready(function() {
            $("#DivLoad").hide();
        });

        function searchMenu() {
            if ($('#title').val().replace(/\s+/g, "") == "")
                ShowRadynMessage("@Resources.Common.NotFillAnyFieldInSearch");
            else {
                var value = $('#title').val();

                var operationId = document.getElementById("operationId").value;
                if (operationId != "") {
                    $("#DivLoad").show();
                    $("#SearchResult").html("");
                    $.get('/Security/OperationMenus/SearchForNotAdd', { operationId: operationId, value: value, date: new Date().getTime() }, function (data) {
                        if (data != "") {
                            $("#SearchResult").hide();
                            $("#SearchResult").html(data);
                            $("#SearchResult").slideDown('normal');
                        } else {
                            ShowRadynMessage("@Resources.Common.No_results_found");
                        }

                    }).complete(function() {
                        $("#DivLoad").hide();
                    });
                }

            }
        }
    </script>
}
@section PageTitle
{
    @Resources.Security.MenuName @Resources.Common.New

}
@section PageAction
{
    <div class="button-div m-btn waves-green i-save">
        @{Html.Radyn().ImageActionLink().ActionName("OperationMenu").ControllerName("OperationMenus").Area("Security").Text(@Resources.Common.Save).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/Save.png")).ImagePosition(ImageActionLink.Position.Right).Submit().Render();}
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().ActionName("Index", new { operationId = Request.QueryString["operationId"] }).ControllerName("OperationMenus").Area("Security").Text(@Resources.Common.Return).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>

}
@section PageActionDown
{
    <div class="button-div m-btn waves-green i-save">
        @{Html.Radyn().ImageActionLink().ActionName("OperationMenu").ControllerName("OperationMenus").Area("Security").Text(@Resources.Common.Save).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/Save.png")).ImagePosition(ImageActionLink.Position.Right).Submit().Render();}
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().ActionName("Index", new { operationId = Request.QueryString["operationId"] }).ControllerName("OperationMenus").Area("Security").Text(@Resources.Common.Return).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="radynForm">
        <input type="hidden" value="@ViewBag.OperationId" id="operationId" name="operationId" />
        
        <div class="item-row">
            <div class="table-row-cap">
                <div class="item">
                </div>
            </div>


            <div class="table-row-item select-row two-col">
                <div class="item">
                    <input type="text" name="title" id="title" class="" />
                  
                    <div class="m-btn waves-blue i-search icon-btn ">
                        <span>    <a onclick="searchMenu();"></a></span>
                    </div>
                    

                </div>
            </div>

        </div>
       
        <div class="fit" align="center" id="DivLoad">
            <img id="loading" width="150" src="/Content/Images/Gif/Loading128.gif" alt="" />
        </div>
        <div class="fit" id="SearchResult">
        </div>
    </div>
}
