@using Radyn.Utility
@using Radyn.Web.Mvc;

@model IEnumerable<Radyn.Security.DataStructure.Group>
    @{
        ViewBag.Title = @Resources.Common.List + " " + @Resources.Security.GroupName;
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    @section Head{}
    @section PageTitle
{
        @Resources.Common.List @Resources.Security.GroupName

    }
    @section PageAction
{
        <div class="button-div m-btn waves-blue i-add">
            @{Html.Radyn().ImageActionLink().ActionName("Create").ControllerName("Group").Area("Security").Text(@Resources.Security.GroupName + " " + @Resources.Common.New).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/Add.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
        </div>

    }
    @section PageActionDown
{
        <div class="button-div m-btn waves-blue i-add">
            @{Html.Radyn().ImageActionLink().ActionName("Create").ControllerName("Group").Area("Security").Text(@Resources.Security.GroupName + " " + @Resources.Common.New).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/Add.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
        </div>
    }
    <div class="radynForm">
        @{Html.Radyn().Grid(Model).Name("Grid").HtmlAttributes(new { style = "width:98%;margin: 0 auto" }).Columns(columns =>
              {
                  columns.Template(group => group.Name).Title(@Resources.Security.GroupName).Width(250).HeaderHtmlAttributes(new { style = "text-align:center" });


                  columns.Template(resource => "<a style='cursor: pointer;'  href='" + Url.Content("~/Security/RoleGroups/Index?groupId=" + resource.Id) + "'>" +
                                               " <img width='18' align='absmiddle' title='" + Resources.Common.RoleList + "' src='" + Url.Content("~/Content/Images/reserve-list.png") + "' />" + "</a> | " +
                      "<a style='cursor: pointer;'  href='" + Url.Content("~/Security/Group/Details?Id=" + resource.Id) + "'>" +
                      " <img width='18' align='absmiddle' title='" + Resources.Common.Detail + "' src='" + Url.Content("~/Content/Images/details.png") + "' />" + "</a> | " +
                      "<a style='cursor: pointer;'  href='" + Url.Content("~/Security/Group/Edit?Id=" + resource.Id) + "'> " +
                      " <img width='18' align='absmiddle' title='" + Resources.Common.Edit + "' src='" + Url.Content("~/Content/Images/edit.png") + "' />" + "</a> | " +
                      "<a style='cursor: pointer;'  href='" + Url.Content("~/Security/Group/Delete?Id=" + resource.Id) + "'>" +
                      " <img width='18' align='absmiddle' title='" + Resources.Common.Delete + "' src='" + Url.Content("~/Content/Images/Delete-Close.png") + "' />" + "</a> ").Width(300).Filterable(false).Encode(false);

              })

                        .Sortable(sorting => sorting.Enabled(true))
                        .Pageable(paging => paging.Enabled(true))
                        .Filterable(filtering => filtering.Enabled(true))
                        //.Footer(true)
                        .Render();}

    </div>
