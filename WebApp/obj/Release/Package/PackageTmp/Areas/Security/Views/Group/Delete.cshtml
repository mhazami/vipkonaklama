@using Radyn.Utility
@using Radyn.Web.Mvc;
@model Radyn.Security.DataStructure.Group
@{
    ViewBag.Title = @Resources.Common.Delete + " " + @Resources.Security.GroupName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Head{}
@section PageTitle
{
    @Resources.Common.DeleteMessage

}
@section PageAction
{
<div class="button-div m-btn waves-red i-check">
    @{Html.Radyn().ImageActionLink().ActionName("Delete").ControllerName("Group").Area("Security").Text(@Resources.Common.Yes).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/Delete-Close.png")).ImagePosition(ImageActionLink.Position.Right).Submit().ImageWidth("15").ImageHeight("20").Render();}
</div>
    <div class="button-div m-btn waves-green i-return">
        @{Html.Radyn().ImageActionLink().ActionName("Index").ControllerName("Group").Area("Security").Text(@Resources.Common.No).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>

}
@section PageActionDown
{
    <div class="button-div m-btn waves-red i-check">
        @{Html.Radyn().ImageActionLink().ActionName("Delete").ControllerName("Group").Area("Security").Text(@Resources.Common.Yes).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/Delete-Close.png")).ImagePosition(ImageActionLink.Position.Right).Submit().ImageWidth("15").ImageHeight("20").Render();}
    </div>
    <div class="button-div m-btn waves-green i-return">
        @{Html.Radyn().ImageActionLink().ActionName("Index").ControllerName("Group").Area("Security").Text(@Resources.Common.No).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>
}

@using (Html.BeginForm())
{
    
    @Html.ValidationSummary(true)
    <div class="radynForm">
        <div class="item-row">
            <div class="table-row-cap">
                <div class="item">
                    @Resources.Security.GroupName
                </div>
            </div>
            <div class="table-row-item table-c-fit">
                <div class="item">
                    @Html.DisplayFor(model => model.Name)
                    @Html.HiddenFor(model => model.Id)
                </div>
            </div>
        </div>
    </div>
}
