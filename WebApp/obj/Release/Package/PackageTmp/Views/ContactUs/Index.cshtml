                    <textarea id="Description" name="Description" placeholder="پیام شما"></textarea>
                </div>
                <div class="login-data-row">
                    <div class="login-data-row-item">
                        <div>
                            <label>
                                کد امنیتی
                            </label>
                            <div class="captcha-control">
                                @{ Html.Radyn().Captcha().Render(); }
                            </div>
                            <input type="text" name="captch" placeholder="@Resources.WebDesign.Captcha" />
                        </div>
                    </div>
                </div>
               

               
               
                <div class="login-data-row-item">
                    <input type="button" onclick="SendRequestContact()" value="@Resources.CommonComponent.Send" />
                    
                </div>
            }

