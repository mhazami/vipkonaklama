@using Radyn.FormGenerator.DataStructure
@using Radyn.Web.Mvc
@using Radyn.WebApp.Areas.FormGenerator.Tools
@using Radyn.WebApp.Areas.WebDesign.Tools
@model Radyn.Security.Tools.ContactUSModel
@{
    ViewBag.Title = Resources.Common.ContactUs;
    Layout = "~/Views/Shared/User_Layout.cshtml";
}

@section Head{
<script>
        function SendRequestContact() {
            $.post("@Url.Content("~/ContactUs")",
                $('form[action^="@Url.Content("~/ContactUs")"]').serialize(),
                function(data) {
                    if (data!="false") {
                    }
                });
            ShowRadynMessage();
        }
</script>
}


<div class="main-page contactUs">
