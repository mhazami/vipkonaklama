@using Radyn.Web.Mvc.Utility
@using Radyn.WebApp.Areas.Common.Component
@model Radyn.Article.DataStructure.ArticleCategory
    <div class="item-row fit">
        <div class="table-row-cap">
            <div class="item">
                @Resources.Article.ArticleCategoryTitle
            </div>
        </div>
        <div class="table-row-item">
            <div class="item">
                @{Html.LanguageContentTextBoxFor(Model, m => m.Title);
                }
            </div>
        </div>
    </div>
    <div class="item-row">
        <div class="table-row-cap">
            <div class="item">
                @Resources.Article.Status
            </div>
        </div>
        <div class="table-row-item drp">
            <div class="item">
                @Html.RadioButtonFor(model => model.Enable, true)          @Resources.Article.Enabel
                @Html.RadioButtonFor(model => model.Enable, false)    @Resources.Article.Disabel
            </div>
        </div>
    </div>
    <div class="item-row">
        <div class="table-row-cap">
            <div class="item">
                ترتیب نمایش
            </div>
        </div>
        <div class="table-row-item">
            <div class="item">
                @Html.TextBoxFor(model => model.Order, new { })
            </div>
        </div>
    </div>
    <div class="item-row">
        <div class="table-row-cap">
            <div class="item">
                @Resources.Article.ArticleCategoryParentId
            </div>
        </div>
        <div class="table-row-item">
            <div class="item">
                @Html.DropDownListFor(model => model.ParentId, (SelectList)ViewBag.ArticleCategory, "")
            </div>
        </div>
    </div>
<div class="item-row">
        <div class="table-row-cap table-c-fit">
            <div class="item">
                @Resources.Article.ArticleThumbnailId
            </div>
        </div>
        <div class="table-row-item table-c-fit">
            <div class="item">
                @{
                    Html.RadynAction("FileUploader", "FileUpload", new { area = "FileManager", filePropName = "FileId", fileid = Model.FileId, fileName = "Image" });
                }



            </div>
        </div>
    </div>
