@using Radyn.Gallery.DataStructure
@using Radyn.WebApp.Areas.Common.Component

@using Radyn.Utility
@using Radyn.Web.Mvc
@using Radyn.Web.Mvc.Utility
@model Photo
@{
    ViewBag.Title = Resources.Common.Edit + " " + Resources.Gallery1._Photo;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Head{}
@section PageTitle
{
    @Resources.Common.Edit @Resources.Gallery1._Photo
}
@section PageAction
{
    <div class="button-div m-btn waves-green i-save">
        @{Html.Radyn().ImageActionLink().ActionName("Edit").ControllerName("Photo").Area("Gallery").Text(@Resources.Common.Save).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/Save.png")).ImagePosition(ImageActionLink.Position.Right).Submit().Render();}
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().ActionName("Index", new { GId = Request.QueryString["GId"], externalurl = ViewBag.externalurl }).ControllerName("Photo").Area("Gallery").Text(@Resources.Common.Return).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>
}
@section PageActionDown
{
    <div class="button-div m-btn waves-green i-save">
        @{Html.Radyn().ImageActionLink().ActionName("Edit").ControllerName("Photo").Area("Gallery").Text(@Resources.Common.Save).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/Save.png")).ImagePosition(ImageActionLink.Position.Right).Submit().Render();}
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().ActionName("Index", new { GId = Request.QueryString["GId"], externalurl = ViewBag.externalurl }).ControllerName("Photo").Area("Gallery").Text(@Resources.Common.Return).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>
}
@using (Html.BeginForm())
{

    <div class="radynForm">
        <div class="fit item-row">
            <div class="table-row-cap">
                <div class="item">
                    @Resources.Gallery1.Title
                </div>
            </div>
            <div class="table-row-item table-fit">
                <div class="item">
                    @{
                        Html.LanguageContentTextBoxFor(Model, m => m.Title);
                    }
                </div>
            </div>
        </div>
        <div class="item-row">
            <div class="table-row-cap table-c-fit">
                <div class="item">
                    @Resources.Gallery1._Photo
                </div>
            </div>
            <div class="table-row-item table-c-fit">
                <div class="item">
                    @{
                        Html.RadynAction("FileUploader", "FileUpload", new { area = "FileManager", filePropName = "PicFile", showimage = true, fileid = Model.PicFile, fileName = "Image" });

                    }

                </div>
            </div>
        </div>


    </div>
}