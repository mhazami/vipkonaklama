@using Radyn.Web.Mvc;
@using Radyn.WebApp.Areas.Common.Component
@model Radyn.ContentManager.DataStructure.DefaultHtmlDesgin
@{
    ViewBag.Title = @Resources.Common.Edit + " " + @Resources.ContentManager.Html;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Head{
    <script type="text/javascript">
        function changeCulture() {
            var langId = document.getElementById("LanguageId").value;
            $("#DivItem").html("");
            $.get("@Url.Content("~/ContentManager/DefaultHtmlDesgin/GetModify")", { Id: '@ViewBag.Id', culture: langId, date: new Date().getTime() }, function (data) {
                $("#DivItem").html(data).slideDown("slow");;
            });
        }

        $(document).ready(function () {
            changeCulture();
        });
    </script>
}
@section PageTitle
{
    @Resources.Common.Edit @Resources.ContentManager.Html
}
@section PageAction
{
    <div class="button-div m-btn waves-green i-save">
        @{Html.Radyn().ImageActionLink().ActionName("Edit").ControllerName("DefaultHtmlDesgin").Area("ContentManager").Text(@Resources.Common.Save).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Save.png")).ImagePosition(ImageActionLink.Position.Right).Submit().Render();}
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().ActionName("Index").ControllerName("DefaultHtmlDesgin").Area("ContentManager").Text(@Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>
}
@section PageActionDown
{
    <div class="button-div m-btn waves-green i-save">
        @{Html.Radyn().ImageActionLink().ActionName("Edit").ControllerName("DefaultHtmlDesgin").Area("ContentManager").Text(@Resources.Common.Save).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Save.png")).ImagePosition(ImageActionLink.Position.Right).Submit().Render();}
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().ActionName("Index").ControllerName("DefaultHtmlDesgin").Area("ContentManager").Text(@Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>
}

@using (Html.BeginForm())
{
    <div class="radynForm">
        <div class="item-row">
            @{
                Html.LanguageDropDownList("changeCulture();");
            }
        </div>
        <div id="DivItem"></div>
    </div>


}
