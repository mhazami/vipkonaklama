
@model IEnumerable<Radyn.ContentManager.DataStructure.Pages>
    @{
        ViewBag.Title = Resources.ContentManager.Pages;
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    @section Head{

    }
    @section PageTitle
{
        @Resources.Common.List @Resources.ContentManager.Pages
    }
    @section PageAction
{
        <div class="button-div m-btn waves-blue i-add">
            @{Html.Radyn().ImageActionLink().ActionName("Create").ControllerName("Pages").Area("ContentManager").Text(@Resources.ContentManager.Page + " " + @Resources.Common.New).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Add.png")).ImagePosition(ImageActionLink.Position.Right).ImageHeight("20").ImageWidth("20").Render(); }
        </div>

    }
    @section PageActionDown
{
        <div class="button-div m-btn waves-blue i-add">
            @{Html.Radyn().ImageActionLink().ActionName("Create").ControllerName("Pages").Area("ContentManager").Text(@Resources.ContentManager.Page + " " + @Resources.Common.New).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Add.png")).ImagePosition(ImageActionLink.Position.Right).ImageHeight("20").ImageWidth("20").Render(); }
        </div>
    }

    <div class="radynForm">
        @{Html.Radyn().Grid(Model).Name("Grid").HtmlAttributes(new { style = "width:98%; margin: 1% auto;text-align: center" }).Columns(columns =>
                {
                    columns.Template(content => content.Title).Title(@Resources.ContentManager.PageName).Width(200).HeaderHtmlAttributes(new { style = "text-align:center" });
                    columns.Template(content => content.Enabled ? Resources.Common.Enable : Resources.Common.Disable).Title(@Resources.Common.Enable).Width(50).HeaderHtmlAttributes(new { style = "text-align:center" });
                    columns.Template(content => content.Url).Title(@Resources.ContentManager.Url).Width(70).HeaderHtmlAttributes(new { style = "text-align:center" });
                    columns.Template(content =>
                    "<a style='cursor: pointer;'  href='" + Url.Content("~/ContentManager/Pages/Details?Id=" + content.Id) + "'>" +
                    " <img width='18' align='absmiddle' title='" + Resources.Common.Detail + "' src='" + Url.Content("~/Content/Images/details.png") + "' />" + "</a> | " +
                    "<a style='cursor: pointer;'  href='" + Url.Content("~/ContentManager/Pages/Edit?Id=" + content.Id) + "'> " +
                    " <img width='18' align='absmiddle' title='" + Resources.Common.Edit + "' src='" + Url.Content("~/Content/Images/edit.png") + "' />" + "</a> | " +
                    "<a style='cursor: pointer;'  href='" + Url.Content("~/ContentManager/Pages/Delete?Id=" + content.Id) + "'>" +
                    " <img width='18' align='absmiddle' title='" + Resources.Common.Delete + "' src='" + Url.Content("~/Content/Images/Delete-Close.png") + "' /></a> " + 
                    "<a style='cursor: pointer;'  href='" + Url.Content("~/ContentManager/UIPanel/GetDesign?Id=" + content.HtmlId) + "'>" +
                    " <img width='18' align='absmiddle' title='" + Resources.WebDesign.Design + "' src='" + Url.Content("~/Content/Images/Design.png") + "' /></a>").Width(300).Filterable(false).Encode(false);

                })

                .Sortable(sorting => sorting.Enabled(true))
                .Pageable(paging => paging.Enabled(true))
                .Filterable(filtering => filtering.Enabled(true))
                //.Footer(true)
                .Render();}
    </div>
