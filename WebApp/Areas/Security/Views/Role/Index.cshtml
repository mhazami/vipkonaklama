@using Radyn.Utility
@using Radyn.Web.Mvc;

@model IEnumerable<Radyn.Security.DataStructure.Role>
    @{
        ViewBag.Title = @Resources.Common.List + " " + @Resources.Security.RoleName;
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    @section Head{}
    @section PageTitle
{
        @Resources.Common.List @Resources.Security.RoleName

    }
    @section PageAction
{
                      <div class="button-div m-btn waves-blue i-add">
                          @{Html.Radyn().ImageActionLink().ActionName("Create").ControllerName("Role").Area("Security").Text(@Resources.Security.RoleName + " " + @Resources.Common.New).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/Add.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
                      </div>
    }
    @section PageActionDown
{
                      <div class="button-div m-btn waves-blue i-add">
                          @{Html.Radyn().ImageActionLink().ActionName("Create").ControllerName("Role").Area("Security").Text(@Resources.Security.RoleName + " " + @Resources.Common.New).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/Add.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
                      </div>
        }
        <div class="radynForm">

            @{Html.Radyn().Grid(Model).Name("Grid").HtmlAttributes(new { style = "width:98%;margin: 0 auto" }).Columns(columns =>
                  {
                      columns.Template(role => role.Name).Title(@Resources.Security.RoleName).Width(250).HeaderHtmlAttributes(new { style = "text-align:center" });
                      columns.Template(role => role.IsAdmin ? Resources.Common.Yes : Resources.Common.No).Title(Resources.Security.RoleIsAdmin).Width(60).HeaderHtmlAttributes(new { style = "text-align:center" });
                      columns.Template(role => "<a style='cursor: pointer;'  href='" + Url.Content("~/Security/RoleMenu/Index?roleId=" + role.Id + "") + "'>" + @Resources.Security.MenuName + "</a>" + " | " +
                                "<a style='cursor: pointer;'  href='" + Url.Content("~/Security/RoleActions/Index?roleId=" + role.Id + "") + "'>" + @Resources.Security.ActionName + "</a>" + " | " +
                                "<a style='cursor: pointer;'  href='" + Url.Content("~/Security/RoleOperations/Index?roleId=" + role.Id + "") + "'>" + @Resources.Security.OperationName + "</a>" + " | " +
                                "<a style='cursor: pointer;'  href='" + Url.Content("~/Security/Role/Details?Id=" + role.Id + "") + "'>" + @Resources.Common.Detail + "</a>" + " | " +
                                "<a style='cursor: pointer;'  href='" + Url.Content("~/Security/Role/Edit?Id=" + role.Id + "") + "'>" + @Resources.Common.Edit + "</a>" + " | " +
                                "<a style='cursor: pointer;'  href='" + Url.Content("~/Security/Role/Delete?Id=" + role.Id + "") + "'>" + @Resources.Common.Delete + "</a>").Width(300).Encode(false);
                  })

                                              .Sortable(sorting => sorting.Enabled(true))
                                              .Pageable(paging => paging.Enabled(true))
                                              .Filterable(filtering => filtering.Enabled(true))
                                              //.Footer(true)
                                              .Render();
            }
        </div>
