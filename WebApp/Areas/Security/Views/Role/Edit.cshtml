@using Radyn.Utility
@using Radyn.Web.Mvc;
@model Radyn.Security.DataStructure.Role
@{
    ViewBag.Title = @Resources.Common.Edit + " " + @Resources.Security.RoleName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Head{}
@section PageTitle
{
    @Resources.Common.Edit @Resources.Security.RoleName

}
@section PageAction
{
    <div class="button-div m-btn waves-green i-save">
        @{Html.Radyn().ImageActionLink().ActionName("Edit").ControllerName("Role").Area("Security").Text(@Resources.Common.Save).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/Save.png")).ImagePosition(ImageActionLink.Position.Right).Submit().ImageWidth("15").ImageHeight("20").Render();}

    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().ActionName("Index").ControllerName("Role").Area("Security").Text(@Resources.Common.Return).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>

}
@section PageActionDown
{

}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <div class="radynForm">
        <div class="item-row">
            <div class="table-row-cap">
                <div class="item">
                    @Resources.Security.RoleName
                </div>
            </div>
            <div class="table-row-item">
                <div class="item">
                    @Html.EditorFor(model => model.Name)
                </div>
            </div>
        </div>
        <div class="item-row">
            <div class="table-row-cap">
                <div class="item">
                    @Resources.Security.RoleIsAdmin
                </div>
            </div>
            <div class="table-row-item drp">
                <div class="item">
                    @Html.RadioButtonFor(model => model.IsAdmin, true)@Resources.Common.Yes
                    @Html.RadioButtonFor(model => model.IsAdmin, false)@Resources.Common.No
                </div>
            </div>
        </div>
    </div>
}
