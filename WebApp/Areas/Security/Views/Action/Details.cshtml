@using Radyn.Utility
@using Radyn.Web.Mvc;
@model Radyn.Security.DataStructure.Action
@{
    ViewBag.Title = @Resources.Common.Detail + " " + @Resources.Security.ActionName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Head{}
<table cellpadding="0" cellspacing="0" align="center" dir="@Resources.Common.Direction" style="text-align:@Resources.Common.Aligment;border: solid 1px grey;padding: 2px 2px 2px 2px;">
    <tr>
        <td class="DEheader">
            @Resources.Common.Detail @Resources.Security.ActionName
        </td>
        <td></td>
        <td>
            <div class="button-div m-btn waves-red i-return">
                @{Html.Radyn().ImageActionLink().ActionName("Index", new { menuId = Request.QueryString["menuId"] }).ControllerName("Action").Area("Security").Text(@Resources.Common.Return).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(Resources.Common.Aligment.ToEnum<ImageActionLink.Position>()).Render();}
            </div>
        </td>
    <tr>
        <td colspan="3">
            @Html.ValidationSummary(true)
            @if (Model != null)
            {
                <table border="0" cellpadding="2" cellspacing="2" width="300" style="padding: 4px 4px 4px 4px;">
                    <tr>
                        <td class="EditRow">
                            @Resources.Security.ActionMenuId
                        </td>
                        <td class="EditFiled">
                            @Model.Menu.Title
                        </td>
                    </tr>
                    <tr>
                        <td class="EditRow">
                            @Resources.Security.ActionName
                        </td>
                        <td class="EditFiled">
                            @Html.DisplayFor(model => model.Name)
                        </td>
                    </tr>
                    @Html.HiddenFor(model => model.Id)
                </table>
            }
        </td>
    </tr>
    <tr>
        <td class="DEheader"></td>
        <td></td>
        <td>
            <div class="button-div m-btn waves-red i-return">
                @{Html.Radyn().ImageActionLink().ActionName("Index", new { menuId = Request.QueryString["menuId"] }).ControllerName("Action").Area("Security").Text(@Resources.Common.Return).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(Resources.Common.Aligment.ToEnum<ImageActionLink.Position>()).Render();}
            </div>
        </td>
    </tr>
</table>
