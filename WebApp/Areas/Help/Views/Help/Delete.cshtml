@using Radyn.Help.DataStructure
@using Radyn.Web.Mvc;
@using Radyn.Web.Mvc.Utility
@model Help
@{
    ViewBag.Title = @Resources.Common.Delete + " " + @Resources.Help.HelpName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Head{}
@section PageTitle
{
    @Resources.Common.DeleteMessage
}
@section PageAction
{
    <div class="button-div m-btn waves-red i-delete">
        @{Html.Radyn().ImageActionLink().ActionName("Delete").ControllerName("Help").Area("Help").Text(@Resources.Common.Yes).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Delete-Close.png")).ImagePosition(ImageActionLink.Position.Right).Submit().Render();}
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().ActionName("Index").ControllerName("Help").Area("Help").Text(@Resources.Common.No).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>
}
@section PageActionDown
{
    <div class="button-div m-btn waves-red i-delete">
        @{Html.Radyn().ImageActionLink().ActionName("Delete").ControllerName("Help").Area("Help").Text(@Resources.Common.Yes).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Delete-Close.png")).ImagePosition(ImageActionLink.Position.Right).Submit().Render();}
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().ActionName("Index").ControllerName("Help").Area("Help").Text(@Resources.Common.No).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="radynForm">
        <div class="item-row">
            <div class="table-row-cap">
                <div class="item">
                    @Resources.Help.HelpDefaultTitle
                </div>
            </div>
            <div class="table-row-item table-c-fit">
                <div class="item">
                    @Html.DisplayFor(model => model.DefaultTitle)
                </div>
            </div>
        </div>
        <div class="item-row">
            <div class="table-row-cap">
                <div class="item">
                    @Resources.Common.Status
                </div>
            </div>
            <div class="table-row-item table-c-fit">
                <div class="item">
                    @(Model.Enabled ? @Resources.Common.Enable : @Resources.Common.Disable)
                </div>
            </div>
        </div>
        <div class="item-row fit">
            <div class="table-row-cap table-c-auto">
                <div class="item">
                    @Resources.Help.HelpDefaultConent
                </div>
            </div>
            <div class="table-row-item table-c-fit table-c-auto table-fit">
                <div class="item">
                    @{Html.HtmlEncoder(Model.DefaultConent);}

                </div>
            </div>
        </div>
    </div>
}
