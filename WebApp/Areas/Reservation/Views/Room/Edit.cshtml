@using Radyn.Web.Mvc;
@using Radyn.WebApp.AppCode.Base
@model Room
@{
    ViewBag.Title = Resources.Common.Edit;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Head{}
@section PageTitle{@Resources.Common.Edit}
@section PageAction {
    <div class="button-div m-btn waves-green i-save">
        @{Html.Radyn().ImageActionLink().Text(Resources.Common.Save).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Save.png")).ImagePosition(ImageActionLink.Position.Right).Submit().Render();}
    </div>

    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Reservation/Room/Index")).Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>
}
@section PageActionDown {
    <div class="button-div m-btn waves-green i-save">
        @{Html.Radyn().ImageActionLink().Text(Resources.Common.Save).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Save.png")).ImagePosition(ImageActionLink.Position.Right).Submit().Render();}
    </div>

    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Reservation/Room/Index")).Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>
}
@if (Model != null)
{
    @Html.ValidationSummary(true)
    <div class="radynForm">
        
            <div>
                <div class="table-row-cap">
                    <div class="item">
                        @Resources.Reservation.Title
                    </div>
                </div>
                <div class="table-row-item">
                    <div class="item">
                        @Html.EditorFor(model => model.Title)
                    </div>
                </div>
            </div>
            <div>
                <div class="table-row-cap">
                    <div class="item">
                        @Resources.Reservation.Idle
                    </div>
                </div>
                <div class="table-row-item drp">
                    <div class="item">
                        @Html.RadioButtonFor(model => model.Idle, true)@Resources.Common.Yes
                        @Html.RadioButtonFor(model => model.Idle, false)@Resources.Common.No
                    </div>
                </div>
            </div>
            <div>
                <div class="table-row-cap">
                    <div class="item">
                        @Resources.Reservation.RoomType
                    </div>
                </div>
                <div class="table-row-item ">
                    <div class="item">
                        @Html.DropDownListFor(model => model.RoomTypeId, (SelectList)ViewBag.RoomType, new { @class = "form-control" })
                    </div>
                </div>
            </div>
       
    </div>
}
