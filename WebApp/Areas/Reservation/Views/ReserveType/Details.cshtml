@using Radyn.Web.Mvc
@using Radyn.Utility
@model ReserveType
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section Head{
    <script>
        $(function () {
            getModify();
        })
        function getModify(el) {
            $('#DivItem').html('');
            $.get('/Reservation/ReserveType/GetDetails', { culture: $(el).val(), id: '@Model.Id' }, function (data) {
                $('#DivItem').html(data);
            });
        }
    </script>
}
@section PageTitle{@Resources.Common.Edit}
@section PageAction {

    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Reservation/ReserveType/Index?hotelId=" + Model.HotelId + "")).Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>
}
@section PageActionDown {

    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Reservation/ReserveType/Index?hotelId=" + Model.HotelId + "")).Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>
}

<div class="radynForm">
    <div class="fit">
        @{
            Html.LanguageDropDownList("getModify(this)");
        }
    </div>
    <div id="DivItem"></div>
</div>

