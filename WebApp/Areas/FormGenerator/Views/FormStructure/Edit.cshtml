@using System.Web.Mvc.Html
@using Radyn.Web.Mvc;
@using Radyn.WebApp.Areas.FormGenerator
@model Radyn.FormGenerator.DataStructure.FormStructure
@{
    ViewBag.Title = @Resources.Common.Edit + " " + Resources.FormGenerator.Form;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Head{


}
@section PageTitle
{
    @Resources.Common.New @Resources.FormGenerator.Form
}
@section PageAction
{
    <div class="button-div m-btn waves-green i-save">
        @{Html.Radyn().ImageActionLink().ActionName("Edit").ControllerName("FormStructure").Area("FormGenerator").Text(@Resources.Common.Save).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Save.png")).ImagePosition(ImageActionLink.Position.Right).Submit().Render();}
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().ActionName("Index").ControllerName("FormStructure").Area("FormGenerator").Text(@Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>
}
@section PageActionDown
{
    <div class="button-div m-btn waves-green i-save">
        @{Html.Radyn().ImageActionLink().ActionName("Edit").ControllerName("FormStructure").Area("FormGenerator").Text(@Resources.Common.Save).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Save.png")).ImagePosition(ImageActionLink.Position.Right).Submit().Render();}
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().ActionName("Index").ControllerName("FormStructure").Area("FormGenerator").Text(@Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>
}
@using (Html.BeginForm())
{
    Html.RenderAction("FormStructureModify", "FormStructure", new { area = "FormGenerator", Id = ViewBag.Id });
}
