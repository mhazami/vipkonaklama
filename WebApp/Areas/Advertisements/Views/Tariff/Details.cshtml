@using Radyn.Utility
@using Radyn.Web.Mvc
@model Radyn.Advertisements.DataStructure.Tariff

@{
    ViewBag.Title = @Resources.Common.Detail;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Head{

}
@section PageTitle
{
    @Resources.Advertisement.ComponentTitle
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@section PageActionDown
{
 
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().ActionName("Index").ControllerName("Tariff").Area("Advertisements").Text(Resources.Common.Return).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>
}
@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    <div class="radynForm">
        <div class="item-row">
            <div class="table-row-cap">
                <div class="item">
                    @Resources.Advertisement.DayCount
                </div>
            </div>
            <div class="table-row-item">
                <div class="item">
                    @Html.DisplayFor(model => model.DayCount, new { })
                </div>
            </div>
        </div>
        <div class="item-row">
            <div class="table-row-cap">
                <div class="item">
                    @Resources.Advertisement.ClickCount
                </div>
            </div>
            <div class="table-row-item">
                <div class="item">
                    @Html.DisplayFor(model => model.ClickCount, new { })
                </div>
            </div>
        </div>
        <div class="item-row">
            <div class="table-row-cap">
                <div class="item">
                    @Resources.Advertisement.VisitCount
                </div>
            </div>
            <div class="table-row-item">
                <div class="item">
                    @Html.DisplayFor(model => model.VisitCount, new { })
                </div>
            </div>
        </div>
        <div class="item-row">
            <div class="table-row-cap">
                <div class="item">
                    @Resources.Advertisement.Description
                </div>
            </div>
            <div class="table-row-item">
                <div class="item">
                    @Html.DisplayFor(model => model.Description, new { })
                </div>
            </div>
        </div>
        <div class="item-row">
            <div class="table-row-cap">
                <div class="item">
                    @Resources.Advertisement.TariffClass
                </div>
            </div>
            <div class="table-row-item">
                <div class="item">
                    @Html.DisplayFor(model => model.TariffClass.Title, new { })

                </div>
            </div>
        </div>
        <div class="item-row">
            <div class="table-row-cap">
                <div class="item">
                    @Resources.Advertisement.Price
                </div>
            </div>
            <div class="table-row-item">
                <div class="item">
                    @Html.DisplayFor(model => model.Price, new { })
                </div>
            </div>
        </div>

        @Html.HiddenFor(model => model.Id)

    </div>
}
