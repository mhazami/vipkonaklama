@using Radyn.Utility
@using Radyn.Web.Mvc
@model IEnumerable<Radyn.Advertisements.DataStructure.TariffClass>


    @{
        ViewBag.Title = @Resources.Advertisement.ComponentTitle;
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    @section Head{}
    @section PageTitle
{
        @Resources.Advertisement.ComponentTitle
    }
    @section PageAction
{
        <div class="button-div m-btn waves-blue i-add">
            @{Html.Radyn().ImageActionLink().NavigateUrl("/Advertisements/TariffClass/Create?SectionPositionId=" + Request.QueryString["SectionPositionId"]).Text(Resources.Common.Create).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/Add.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
        </div>

    }
    @section PageActionDown
{
        <div class="button-div m-btn waves-blue i-add">
            @{Html.Radyn().ImageActionLink().NavigateUrl("/Advertisements/TariffClass/Create?SectionPositionId=" + Request.QueryString["SectionPositionId"]).Text(Resources.Common.Create).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/Add.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
        </div>

    }
    @{Html.Radyn().Grid(Model).Name("Grid").HtmlAttributes(new { style = "width:98%;margin: 0 auto" }).Columns(columns =>
        {
            columns.Template(advertisement => advertisement.Title).Title(Resources.Advertisement.Title).Width(350).HeaderHtmlAttributes(new { style = "text-align:center" });
            columns.Template(advertisement => advertisement.PerDay).Title(Resources.Advertisement.PerDay).Width(350).HeaderHtmlAttributes(new { style = "text-align:center" });
            columns.Template(advertisement => advertisement.PerClick).Title(Resources.Advertisement.PerClick).Width(350).HeaderHtmlAttributes(new { style = "text-align:center" });
            columns.Template(advertisement => advertisement.PerVisit).Title(Resources.Advertisement.PerVisit).Width(350).HeaderHtmlAttributes(new { style = "text-align:center" });
            columns.Template(advertisement => advertisement.Price).Title(Resources.Advertisement.Price).Width(350).HeaderHtmlAttributes(new { style = "text-align:center" });

            columns.Template(resource =>
                "<a style='cursor: pointer;'  href='" + Url.Content("~/Advertisements/TariffClass/Details?Id=" + resource.Id + "&SectionPositionId=" + resource.SectionPositionId) + "'>" +
                " <img width='18' align='absmiddle' title='" + Resources.Common.Detail + "' src='" + Url.Content("~/Content/Images/details.png") + "' />" + "</a> | " +
                "<a style='cursor: pointer;'  href='" + Url.Content("~/Advertisements/TariffClass/Edit?Id=" + resource.Id + "&SectionPositionId=" + resource.SectionPositionId) + "'> " +
                " <img width='18' align='absmiddle' title='" + Resources.Common.Edit + "' src='" + Url.Content("~/Content/Images/edit.png") + "' />" + "</a> | " +
                "<a style='cursor: pointer;'  href='" + Url.Content("~/Advertisements/TariffClass/Delete?Id=" + resource.Id + "&SectionPositionId=" + resource.SectionPositionId) + "'>" +
                " <img width='18' align='absmiddle' title='" + Resources.Common.Detail + "' src='" + Url.Content("~/Content/Images/Delete-Close.png") + "' />" + "</a>  ").Width(300).Filterable(false).Encode(false);

        })

                  .Sortable(sorting => sorting.Enabled(true))
                  .Pageable(paging => paging.Enabled(true))
                  .Filterable(filtering => filtering.Enabled(true))
                  //.Footer(true)
                  .Render();}


   