@using Radyn.FileManager
@using Radyn.Utility
@using Radyn.Web.Mvc;
@using Radyn.Web.Mvc.Utility
@model Radyn.Advertisements.DataStructure.Advertisement
@{
    ViewBag.Title = @Resources.Common.Delete + " " + @Resources.Advertisement.Advertisements;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Head{
    <script type="text/javascript">

        $(document).ready(
            function Show() {
                if (@Model.TypeId==9 || @Model.TypeId==12) {

                    if(@Model.TypeId==12) {
                        $("#imageDiv").show('slow');
                    }else {
                        $("#flashDiv").show('slow');
                    }
                }
            }

        );

    </script>
}
@section PageTitle
{
    @Resources.Common.Delete @Resources.News.NewsCategoryTitle

}
@section PageAction
{
    <div class="button-div m-btn waves-red i-delete">
        @{Html.Radyn().ImageActionLink().ActionName("Delete").ControllerName("Advertisement").Area("Advertisements").Text(Resources.Common.Delete).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/Delete-Close.png")).ImagePosition(ImageActionLink.Position.Right).Submit().Render();}
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().ActionName("Index").ControllerName("Advertisement").Area("Advertisements").Text(Resources.Common.Return).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>

}
@section PageActionDown
{
    <div class="button-div m-btn waves-red i-delete">
        @{Html.Radyn().ImageActionLink().ActionName("Delete").ControllerName("Advertisement").Area("Advertisements").Text(Resources.Common.Delete).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/Delete-Close.png")).ImagePosition(ImageActionLink.Position.Right).Submit().Render();}
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().ActionName("Index").ControllerName("Advertisement").Area("Advertisements").Text(Resources.Common.Return).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>

}
@using (Html.BeginForm())
{

    @Html.ValidationSummary(true)

    <div class="radynForm">
        <div class="item-row fit">
            <div class="table-row-cap">
                <div class="item">
                    @Resources.Advertisement.AdvertisementPositionId
                </div>
            </div>
            <div class="table-row-item table-c-fit table-fit">
                <div class="item">
                    @Html.DisplayFor(model => model.SectionPosition.Title)
                </div>
            </div>
        </div>

        <div class="item-row fit">
            <div class="table-row-cap">
                <div class="item">
                    @Resources.Advertisement.AdvertisementFromDate
                </div>
            </div>
            <div class="table-row-item table-c-fit table-fit">
                <div class="item">
                    @Html.DisplayFor(model => model.FromDate)
                </div>
            </div>
        </div>
        <div class="item-row fit">
            <div class="table-row-cap">
                <div class="item">
                    @Resources.Advertisement.AdvertisementToDate
                </div>
            </div>
            <div class="table-row-item table-c-fit table-fit">
                <div class="item">
                    @Html.DisplayFor(model => model.ToDate)
                </div>
            </div>
        </div>
        <div class="item-row fit">
            <div class="table-row-cap">
                <div class="item">
                    @Resources.Advertisement.AdvertisementTypeId
                </div>
            </div>
            <div class="table-row-item table-c-fit table-fit">
                <div class="item">
                    @Html.DisplayFor(model => model.AdvertisementType.Type)
                </div>
            </div>
        </div>
        <div class="item-row">
            <div class="table-row-cap ">
                <div class="item">
                    @Resources.News.NewsThumbnailId
                </div>
            </div>
            <div class="table-row-item table-c-fit">
                <div class="item">

                    @if (Model.FileId.HasValue)
                    {
                        Html.RadynFile().Image().ID(Model.FileId.Value).DeleteButtonVisible("FileId").Height(98).Width(146).Download().Render();

                    }
                </div>
            </div>
        </div>

        <div class="item-row fit">
            <div class="table-row-cap">
                <div class="item">
                    @Resources.Advertisement.AdvertisementText
                </div>
            </div>
            <div class="table-row-item table-c-fit table-fit">
                <div class="item">
                    @{ Html.HtmlEncoder(Model.Text); }
                </div>
            </div>
        </div>
        <div class="item-row fit">
            <div class="table-row-cap">
                <div class="item">
                    @Resources.Advertisement.AdvertisementNavigateUrl
                </div>
            </div>
            <div class="table-row-item table-c-fit table-fit">
                <div class="item">
                    @Html.DisplayFor(model => model.NavigateUrl)
                </div>
            </div>
        </div>
        <div class="item-row fit">
            <div class="table-row-cap">
                <div class="item">
                    @Resources.Advertisement.AdvertisementEnable
                </div>
            </div>
            <div class="table-row-item table-c-fit table-fit">
                <div class="item">
                    @(Model.Enable ? Resources.Common.Enable : Resources.Common.Disable)
                </div>
            </div>
        </div>
        <div class="item-row fit">
            <div class="table-row-cap">
                <div class="item">
                    @Resources.Advertisement.AdvertisementHeight
                </div>
            </div>
            <div class="table-row-item table-c-fit table-fit">
                <div class="item">
                    @Html.DisplayFor(model => model.Height)
                </div>
            </div>
        </div>
        <div class="item-row fit">
            <div class="table-row-cap">
                <div class="item">
                    @Resources.Advertisement.Advertisementwidth
                </div>
            </div>
            <div class="table-row-item table-c-fit table-fit">
                <div class="item">
                    @Html.DisplayFor(model => model.width)
                </div>
            </div>
        </div>
        <div class="item-row fit">
            <div class="table-row-cap">
                <div class="item">
                    @Resources.Advertisement.TimeOut
                </div>
            </div>
            <div class="table-row-item table-c-fit table-fit">
                <div class="item">
                    @Html.DisplayFor(model => model.Timeout)
                </div>
            </div>
        </div>

        @Html.HiddenFor(model => model.Id)
    </div>
}

