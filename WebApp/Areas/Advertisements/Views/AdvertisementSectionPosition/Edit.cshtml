@using Radyn.Utility
@using Radyn.Web.Mvc
@model Radyn.Advertisements.DataStructure.SectionPosition
@{
    ViewBag.Title = @Resources.Common.Edit;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Head{}
@section PageTitle
{
    @Resources.Advertisement.Position
}
@section PageActionDown
{
    <div class="button-div m-btn waves-green i-save">
        @{Html.Radyn().ImageActionLink().ActionName("Edit").ControllerName("AdvertisementSectionPosition").Area("Advertisements").Text(Resources.Common.Save).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/Save.png")).ImagePosition(ImageActionLink.Position.Right).Submit().Render();}
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().NavigateUrl("/Advertisements/AdvertisementSectionPosition/Index?sectionId=" + Request.QueryString["sectionId"]).Text(Resources.Common.Return).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<link src="@Url.Content("~/Content/EnterPriseNodeStyle.css")" rel="stylesheet" type="text/css" />
@using (Html.BeginForm())
{
    <div class="radynForm">
        @Html.ValidationSummary(true)
        <div class="item-row">
            <div class="table-row-cap">
                <div class="item">
                    @Resources.Advertisement.Position
                </div>
            </div>
            <div class="table-row-item">
                <div class="item">
                    @Html.TextBoxFor(model => model.Title, new { })
                </div>
            </div>
        </div>
        <div class="item-row">
            <div class="table-row-cap">
                <div class="item">
                    @Resources.Advertisement.KeyWord
                </div>
            </div>
            <div class="table-row-item">
                <div class="item">
                    @Html.TextBoxFor(model => model.KeyWord, new { })
                </div>
            </div>
        </div>

        <div class="item-row">
            <div class="table-row-cap">
                <div class="item">
                    @Resources.Advertisement.AdsShowCount
                </div>
            </div>
            <div class="table-row-item">
                <div class="item">
                    @Html.TextBoxFor(model => model.AdsShowCount, new { })
                </div>
            </div>
        </div>


        <div class="item-row">
            <div class="table-row-cap">
                <div class="item">
                    @Resources.Advertisement.Orientation
                </div>
            </div>
            <div class="table-row-item drp">
                <div class="item">
                    @Html.RadioButtonFor(model => model.Orientation, true) @Resources.Advertisement.Vertical
                    @Html.RadioButtonFor(model => model.Orientation, false) @Resources.Advertisement.Horizontal
                </div>
            </div>
        </div>
        @Html.HiddenFor(model => model.Id)
    </div>
}

